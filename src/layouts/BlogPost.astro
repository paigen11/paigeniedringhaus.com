---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, subTitle, date, tags, category } = post.data;
const { Content } = await post.render();

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const description = subTitle || `Blog post: ${title}`;
---

<Layout title={`${title} | Paige Niedringhaus`} description={description}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        {category && <span class="category-badge">{category}</span>}

        <h1 class="post-title">{title}</h1>

        {subTitle && <p class="post-subtitle">{subTitle}</p>}

        <div class="post-meta">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          {tags && tags.length > 0 && (
            <>
              <span class="separator">•</span>
              <div class="tags">
                {tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </>
          )}
        </div>
      </header>

      <div class="post-content">
        <Content />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="back-link">← Back to all posts</a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    padding: var(--space-8) var(--space-4);
    min-height: 100vh;
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .category-badge {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-4);
    color: var(--color-text);
  }

  .post-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-6);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    flex-wrap: wrap;
  }

  .separator {
    opacity: 0.5;
  }

  .tags {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-secondary);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  /* Markdown content styles */
  .post-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem;
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }

  .post-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem;
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--color-accent);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(code) {
    background: var(--color-surface);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    border: 1px solid var(--color-border);
  }

  .post-content :global(pre) {
    background: var(--color-surface);
    padding: var(--space-4);
    border-radius: var(--radius);
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--color-border);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
    font-size: 0.875rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-4);
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .post-content :global(figure) {
    margin: 2rem 0;
  }

  .post-content :global(figure img) {
    margin: 0;
  }

  .post-content :global(figcaption) {
    margin-top: var(--space-3);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-text-secondary);
    text-align: center;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius);
    margin: 2rem 0;
  }

  .post-footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-subtitle {
      font-size: 1.125rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
