---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, subTitle, date, tags, category } = post.data;
const { Content, headings } = await post.render();

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const description = subTitle || `Blog post: ${title}`;

// Reading time
const wordCount = post.body
  .replace(/```[\s\S]*?```/g, '')
  .replace(/`[^`]*`/g, '')
  .replace(/<[^>]*>/g, '')
  .replace(/[#*_[\]()]/g, '')
  .split(/\s+/)
  .filter(Boolean).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

// ToC: H2 and H3 only
const tocHeadings = headings.filter((h) => h.depth === 2 || h.depth === 3);
---

<Layout title={`${title} | Paige Niedringhaus`} description={description}>
  <article class="blog-post">

    <div class="post-layout">

      <div class="container">
        <header class="post-header">
          {category && <span class="category-badge">{category}</span>}

          <h1 class="post-title">{title}</h1>

          {subTitle && <p class="post-subtitle">{subTitle}</p>}

          <div class="post-meta">
            <time datetime={date.toISOString()}>{formattedDate}</time>
            <span class="separator">•</span>
            <span>{readingTime} min read</span>
            {tags && tags.length > 0 && (
              <>
                <span class="separator">•</span>
                <div class="tags">
                  {tags.map((tag: string) => (
                    <a href={`/blog?tag=${encodeURIComponent(tag)}`} class="tag">{tag}</a>
                  ))}
                </div>
              </>
            )}
          </div>
        </header>

        <div class="post-content">
          <Content />
        </div>

        <footer class="post-footer">
          <a href="/blog" class="back-link">← Back to all posts</a>
        </footer>
      </div>

      {tocHeadings.length > 0 && (
        <aside class="toc-sidebar">
          <nav class="toc" id="toc">
            <p class="toc-title">On this page</p>
            <ul class="toc-list">
              {tocHeadings.map((h) => (
                <li class={`toc-item toc-depth-${h.depth}`}>
                  <a href={`#${h.slug}`} class="toc-link" data-heading={h.slug}>
                    {h.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </aside>
      )}

    </div>
  </article>
</Layout>

<script>
  // Highlight active ToC link on scroll
  const links = document.querySelectorAll<HTMLAnchorElement>('.toc-link');
  if (links.length > 0) {
    const headingEls = Array.from(links)
      .map((l) => document.getElementById(l.dataset.heading ?? ''))
      .filter(Boolean) as HTMLElement[];

    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            links.forEach((l) => l.classList.remove('active'));
            const active = document.querySelector<HTMLAnchorElement>(
              `.toc-link[data-heading="${entry.target.id}"]`
            );
            active?.classList.add('active');
          }
        }
      },
      { rootMargin: '0px 0px -70% 0px' }
    );

    headingEls.forEach((el) => observer.observe(el));
  }
</script>

<style>
  .blog-post {
    padding-bottom: var(--space-16);
  }

  /* ── Two-column layout ────────────────── */
  .post-layout {
    max-width: 1080px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-4) 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    align-items: start;
  }

  @media (min-width: 1080px) {
    .post-layout {
      grid-template-columns: minmax(0, 720px) 240px;
    }
  }

  /* ── Post container ───────────────────── */
  .container {
    min-width: 0;
  }

  /* ── Header ───────────────────────────── */
  .post-header {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .category-badge {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-4);
    color: var(--color-text);
  }

  .post-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-6);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    flex-wrap: wrap;
  }

  .separator {
    opacity: 0.5;
  }

  .tags {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-tag-bg);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: opacity 0.15s;
  }

  .tag:hover {
    opacity: 0.8;
  }

  /* ── Post content ─────────────────────── */
  .post-content {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4) {
    scroll-margin-top: calc(var(--header-height) + var(--space-6));
  }

  .post-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin: var(--space-10) 0 var(--space-4);
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin: var(--space-8) 0 var(--space-4);
    color: var(--color-text);
  }

  .post-content :global(h4) {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: var(--space-6) 0 var(--space-3);
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-6);
  }

  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--color-accent);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--space-6) 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: var(--space-2);
  }

  .post-content :global(code) {
    background: var(--color-surface);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    border: 1px solid var(--color-border);
  }

  .post-content :global(pre) {
    background: var(--color-surface);
    padding: var(--space-4);
    border-radius: var(--radius);
    overflow-x: auto;
    margin: var(--space-6) 0;
    border: 1px solid var(--color-border);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
    font-size: var(--text-sm);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-4);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .post-content :global(figure) {
    margin: var(--space-8) 0;
  }

  .post-content :global(figure img) {
    margin: 0;
  }

  .post-content :global(figcaption) {
    margin-top: var(--space-3);
    font-size: var(--text-sm);
    font-style: italic;
    color: var(--color-text-secondary);
    text-align: center;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius);
    margin: var(--space-8) 0;
  }

  /* ── Footer ───────────────────────────── */
  .post-footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  /* ── Table of contents ────────────────── */
  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1080px) {
    .toc-sidebar {
      display: block;
      position: sticky;
      top: calc(var(--header-height) + var(--space-8));
      max-height: calc(100vh - var(--header-height) - var(--space-16));
      overflow-y: auto;
    }
  }

  .toc {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
  }

  .toc-title {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: var(--space-2);
  }

  .toc-depth-3 {
    padding-left: var(--space-3);
  }

  .toc-link {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    line-height: 1.4;
    display: block;
    transition: color 0.15s;
  }

  .toc-link:hover,
  .toc-link.active {
    color: var(--color-primary);
  }

  .toc-link.active {
    font-weight: 600;
  }

  /* ── Responsive ───────────────────────── */
  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-subtitle {
      font-size: var(--text-lg);
    }

    .post-content {
      font-size: var(--text-base);
    }

    .post-content :global(h2) {
      font-size: var(--text-2xl);
    }

    .post-content :global(h3) {
      font-size: var(--text-xl);
    }
  }
</style>
