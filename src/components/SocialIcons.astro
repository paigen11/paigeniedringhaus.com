---
import Icon, { type IconName } from './Icon.astro';

interface Props {
  showLabels?: boolean;
}

const { showLabels = false } = Astro.props;

const socialLinks: Array<{ label: string; href: string; icon: IconName }> = [
  { label: 'GitHub',  href: 'https://github.com/paigen11',          icon: 'github' },
  { label: 'X',       href: 'https://twitter.com/pniedri',           icon: 'x'      },
  { label: 'Medium',  href: 'https://paigen11.medium.com',           icon: 'medium' },
  { label: 'DEV',     href: 'https://dev.to/paigen11',               icon: 'dev'    },
  { label: 'Email',   href: 'mailto:hellopaigen@gmail.com',          icon: 'email'  },
  { label: 'RSS',     href: '/rss.xml',                              icon: 'rss'    },
];
---

{socialLinks.map((link) => (
  <a
    class="social-link"
    href={link.href}
    aria-label={link.label}
    target={link.href.startsWith('http') ? '_blank' : undefined}
    rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
  >
    <Icon name={link.icon} size="22px" />
    {showLabels && <span class="social-label">{link.label}</span>}
  </a>
))}

<style>
  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
    text-decoration: none;
    color: var(--color-text-secondary);
    transition: color 0.2s, transform 0.2s;
  }

  .social-link:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .social-label {
    font-size: var(--text-xs);
    font-weight: 500;
  }
</style>
