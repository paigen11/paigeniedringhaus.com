---
import SocialIcons from './SocialIcons.astro';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="copyright">
      <p>Copyright Â© {currentYear}. Paige Niedringhaus</p>
    </div>

    <div class="social-links">
      <SocialIcons showLabels />
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
    padding: 2rem 0;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .copyright p {
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
