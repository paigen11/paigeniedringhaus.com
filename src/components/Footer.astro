---
const socialLinks = [
  {
    label: 'X',
    url: 'https://twitter.com/pniedri',
    icon: 'twitter', // Using simple icons for now
  },
  {
    label: 'Medium',
    url: 'https://medium.com/@paigen11',
    icon: 'medium',
  },
  {
    label: 'DEV',
    url: 'https://dev.to/paigen11',
    icon: 'dev',
  },
  {
    label: 'GitHub',
    url: 'https://github.com/paigen11',
    icon: 'github',
  },
  {
    label: 'Email',
    url: 'mailto:hellopaigen@gmail.com',
    icon: 'email',
  },
  {
    label: 'RSS',
    url: '/rss.xml',
    icon: 'rss',
  },
];

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="copyright">
      <p>Copyright ¬© {currentYear}. Paige Niedringhaus</p>
    </div>

    <div class="social-links">
      {socialLinks.map((link) => (
        <a
          href={link.url}
          target={link.icon !== 'rss' ? '_blank' : undefined}
          rel={link.icon !== 'rss' ? 'noopener noreferrer' : undefined}
          class="social-link"
          aria-label={link.label}
        >
          <span class:list={['social-icon', `icon-${link.icon}`]}></span>
          <span class="social-label">{link.label}</span>
        </a>
      ))}
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-surface, #ffffff);
    border-top: 1px solid var(--color-border, #e2e8f0);
    margin-top: 4rem;
    padding: 2rem 0;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright {
    color: var(--color-text-secondary, #718096);
    font-size: 0.875rem;
  }

  .copyright p {
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    text-decoration: none;
    color: var(--color-text-secondary, #718096);
    transition: color 0.2s, transform 0.2s;
  }

  .social-link:hover {
    color: var(--color-primary, #3730a3);
    transform: translateY(-2px);
  }

  .social-icon {
    font-size: 1.5rem;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Simple icon placeholders using CSS - will replace with FontAwesome later */
  .icon-twitter::before { content: 'ùïè'; }
  .icon-medium::before { content: 'M'; font-weight: bold; }
  .icon-dev::before { content: '‚å®'; }
  .icon-github::before { content: '‚öô'; }
  .icon-email::before { content: '‚úâ'; }
  .icon-rss::before { content: 'üì°'; }

  .social-label {
    font-size: 0.75rem;
    font-weight: 500;
  }
</style>
