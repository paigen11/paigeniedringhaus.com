---
interface Props {
  course: {
    title: string;
    subtitle?: string;
    date: string;
    path: string;
    img: any;
  };
}

const { course } = Astro.props;
---

<a href={course.path} target="_blank" rel="noopener noreferrer" class="video-card">
  <img src={course.img.src || course.img} alt={course.title} class="video-thumbnail" />
  <div class="video-info">
    <h3 class="video-title">{course.title}</h3>
    {course.subtitle && <p class="video-subtitle">{course.subtitle}</p>}
    <p class="video-date">{course.date}</p>
  </div>
</a>

<style>
  .video-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: var(--shadow);
  }

  .video-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .video-thumbnail {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .video-info {
    padding: var(--space-4);
  }

  .video-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .video-subtitle {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .video-date {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }
</style>
