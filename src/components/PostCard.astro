---
interface Props {
  title: string;
  subTitle?: string;
  date: string;
  tags?: string[];
  image?: string | null;
  href: string;
  isExternal?: boolean;
  category?: string;
  layout?: 'horizontal' | 'vertical';
}

const { title, subTitle, date, tags, image, href, isExternal = false, category, layout = 'horizontal' } = Astro.props;
---

<article class="post-card" data-layout={layout}>
  <a
    href={href}
    class="post-link"
    target={isExternal ? '_blank' : undefined}
    rel={isExternal ? 'noopener noreferrer' : undefined}
  >
    {image && (
      <img src={image} alt="" class="post-image" loading="lazy" />
    )}
    <div class="post-body">
      <div class="post-top">
        {category && <span class="category-badge">{category}</span>}
        <h2 class="post-title">
          {title}
          {isExternal && <span class="external-icon" aria-label="opens in new tab">↗</span>}
        </h2>
        {subTitle && <p class="post-subtitle">{subTitle}</p>}
      </div>
      <div class="post-meta">
        <time>{date}</time>
        {tags && tags.length > 0 && (
          <>
            <span class="separator">•</span>
            <div class="tags">
              {tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .post-link {
    display: flex;
    align-items: stretch;
    text-decoration: none;
    color: inherit;
  }

  .post-image {
    width: 200px;
    flex-shrink: 0;
    object-fit: cover;
    display: block;
  }

  .post-body {
    flex: 1;
    padding: var(--space-4) var(--space-5);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
  }

  .post-top {
    margin-bottom: var(--space-3);
  }

  .category-badge {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }

  .post-title {
    font-size: var(--text-lg);
    font-weight: 700;
    margin-bottom: var(--space-1);
    color: var(--color-text);
    line-height: 1.3;
  }

  .post-link:hover .post-title {
    color: var(--color-primary);
  }

  .external-icon {
    font-size: 0.85em;
    color: var(--color-text-secondary);
    margin-left: 0.25em;
    font-weight: 400;
  }

  .post-subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    flex-wrap: wrap;
  }

  .separator {
    opacity: 0.5;
  }

  .tags {
    display: flex;
    gap: var(--space-1);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-tag-bg);
    color: white;
    padding: 0.125rem 0.4rem;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 500;
  }

  /* Vertical layout — image on top, used in grid contexts (e.g. homepage) */
  .post-card[data-layout='vertical'] .post-link {
    flex-direction: column;
  }

  .post-card[data-layout='vertical'] .post-image {
    width: 100%;
    height: 180px;
  }

  @media (max-width: 600px) {
    .post-link {
      flex-direction: column;
    }

    .post-image {
      width: 100%;
      height: 160px;
    }
  }
</style>
