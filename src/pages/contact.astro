<style>
  .page-container {
    max-width: 800px;
  }

  .intro {
    margin-bottom: var(--space-8);
  }

  .page-container h2 {
    font-size: 1.75rem;
    display: flex;
    align-items: center;
    gap: var(--space-3);

    &.no-underline {
      font-weight: 500;
      font-size: 1.5rem;
      line-height: 1.6;
    }
  }

  .icon {
    font-size: 1.5rem;
  }

  .subscribe-wrapper {
    margin: var(--space-6) 0;
  }

  .closing {
    margin-top: var(--space-8);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .page-container h2 {
      font-size: 1.5rem;

      &.no-underline {
        font-size: 1.25rem;
      }
    }
  }
</style>
